<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SunriseSunset.SunriseSunset">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="btnDeleteCity" Text="Delete City" Clicked="btnDeleteCity_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>

        <StackLayout BackgroundColor="Aqua">
            <Label x:Name="lblSunriseLocation" FontSize="Title" TextColor="Black" Padding="10, 20, 0, 10"/>
            <Label x:Name="lblSunriseDateTime" FontSize="Medium" TextColor="Black" Padding="10, 0, 0, 0"/>
            <Label x:Name="lblSunsetDateTime" FontSize="Medium" TextColor="Black" Padding="10, 0, 0, 0"/>
            <Label x:Name="lblDayLength" FontSize="Medium" TextColor="Black" Padding="10, 0, 0, 0"/>
            <Label x:Name="lbltwilightStart" FontSize="Medium" TextColor="Black" Padding="10, 0, 0, 0"/>
            <Label x:Name="lbltwilightEnd" FontSize="Medium" TextColor="Black" Padding="10, 0, 0, 0"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>