<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SunriseSunset.CityInfo">
    <ContentPage.ToolbarItems FontSize="Large">
        <ToolbarItem x:Name="btnDeleteCity" Text="Delete City" Clicked="btnDeleteCity_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout BackgroundColor="Lavender">
            <Label x:Name="cityName" Text="" FontSize="Large" TextColor="Black" />
            <Label x:Name="sunrise" Text="" TextColor="Black" />
            <Label x:Name="sunset" Text="" TextColor="Black" />
            <Label x:Name="dayLength" Text="" TextColor="Black" />
            <Label x:Name="startTwilight" Text="" TextColor="Black" />
            <Label x:Name="endTwilight" Text="" TextColor="Black" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>